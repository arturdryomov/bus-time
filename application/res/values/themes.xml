<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.BusTime" parent="Theme.Sherlock.Light.DarkActionBar.ForceOverflow">
		<item name="android:actionBarStyle">@style/Theme.BusTime.ActionBar</item>
		<item name="actionBarStyle">@style/Theme.BusTime.ActionBar</item>
	</style>

	<style name="Theme.BusTime.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@color/background_action_bar</item>
		<item name="background">@color/background_action_bar</item>

		<item name="android:displayOptions">showTitle</item>
		<item name="displayOptions">showTitle</item>
	</style>

	<style name="Theme.BusTime.TabNavigation" parent="Theme.BusTime">
		<item name="android:actionBarStyle">@style/Theme.BusTime.TabNavigation.ActionBar</item>
		<item name="actionBarStyle">@style/Theme.BusTime.TabNavigation.ActionBar</item>
	</style>

	<style name="Theme.BusTime.TabNavigation.ActionBar" parent="Theme.BusTime.ActionBar">
		<!-- Theme with a “disableHome” displayOption would place tabs on top of the main action bar. -->
		<!-- It is a bug in a mainstream Android implementation of action bar. -->
		<item name="android:displayOptions">showHome|showTitle|useLogo</item>
		<item name="displayOptions">showHome|showTitle|useLogo</item>

		<item name="android:navigationMode">tabMode</item>
		<item name="navigationMode">tabMode</item>
	</style>

	<style name="Theme.BusTime.ListNavigation" parent="Theme.BusTime">
		<item name="android:actionBarStyle">@style/Theme.BusTime.ListNavigation.ActionBar</item>
		<item name="actionBarStyle">@style/Theme.BusTime.ListNavigation.ActionBar</item>
	</style>

	<style name="Theme.BusTime.ListNavigation.ActionBar" parent="Theme.BusTime.ActionBar">
		<item name="android:displayOptions">disableHome</item>
		<item name="displayOptions">disableHome</item>

		<!-- Setting navigationMode to “listMode” would not work properly. -->
		<!-- It should be activated in the code. Another strange Android bug. -->
	</style>

	<style name="Theme.BusTime.Map" parent="Theme.BusTime">
		<item name="android:actionBarStyle">@style/Theme.BusTime.Map.ActionBar</item>
		<item name="actionBarStyle">@style/Theme.BusTime.Map.ActionBar</item>

		<item name="android:windowActionBarOverlay">true</item>
		<item name="windowActionBarOverlay">true</item>
	</style>

	<style name="Theme.BusTime.Map.ActionBar" parent="Theme.BusTime.ActionBar">
		<item name="android:background">@drawable/background_action_bar_transparent</item>
		<item name="background">@drawable/background_action_bar_transparent</item>
	</style>

</resources>