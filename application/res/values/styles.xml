<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="BodyLinearLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">@dimen/body_layout_padding</item>
	</style>

	<style name="BodyLinearLayoutItem">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="BodyListView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="BodyEmptyListViewSign">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_centerVertical">true</item>
	</style>

	<style name="TwoLineListItemContainer">
		<item name="android:paddingLeft">@dimen/list_item_horizontal_padding</item>
		<item name="android:paddingRight">@dimen/list_item_horizontal_padding</item>
		<item name="android:paddingTop">@dimen/list_item_vertical_padding</item>
		<item name="android:paddingBottom">@dimen/list_item_horizontal_padding</item>
	</style>

</resources>
