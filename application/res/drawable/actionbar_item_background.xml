<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Default -->
	<item android:drawable="@color/actionbar_background" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>

	<!-- Focused -->
	<item android:drawable="@drawable/actionbar_item_background_focused" android:state_focused="true" android:state_pressed="false" android:state_selected="false"/>

	<!-- Pressed -->
	<item android:drawable="@drawable/actionbar_item_background_pressed" android:state_pressed="true"/>

</selector>