<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >

	<!-- Actionbar -->

	<RelativeLayout
		android:id="@+id/action_bar"
		style="@style/ActionBar" >

		<TextView
			style="@style/ActionBarTitle"
			android:text="@string/title_shift_time_editing" />
	</RelativeLayout>

	<!-- Main view -->

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/action_bar" >

		<LinearLayout style="@style/BodyLinearLayout" >

			<TimePicker
				android:id="@+id/picker_shift_time"
				style="@style/BodyLinearLayoutItem" />

			<Button
				android:id="@+id/button_confirm"
				style="@style/BodyLinearLayoutItem"
				android:layout_marginTop="@dimen/confirm_button_top_margin"
				android:text="@string/button_update_shift_time" />
		</LinearLayout>
	</ScrollView>

</RelativeLayout>