<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="app.android.bustime"
	android:versionCode="2"
	android:versionName="0.5.1"
	android:installLocation="auto" >

	<uses-sdk android:minSdkVersion="10" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

	<application
		android:label="@string/application_name"
		android:icon="@drawable/ic_launcher_bustime"
		android:theme="@android:style/Theme.Light.NoTitleBar"
		android:name="BusTimeApplication" >

		<uses-library android:name="com.google.android.maps" />

		<activity
			android:name=".ui.DashboardActivity" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.TimetableActivity" >
		</activity>

		<!-- Specific activities with routes dispatch -->

		<activity
			android:name=".ui.dispatch.routes.RoutesListActivity" >
		</activity>
		<activity
			android:name=".ui.dispatch.routes.StationsListActivity" >
		</activity>

		<!-- Specific activities with stations dispatch -->

		<activity
			android:name=".ui.dispatch.stations.RoutesListActivity" >
		</activity>
		<activity
			android:name=".ui.dispatch.stations.StationsListActivity" >
		</activity>
	</application>

</manifest>
