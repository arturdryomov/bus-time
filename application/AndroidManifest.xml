<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="ru.ming13.bustime"
	android:versionCode="3"
	android:versionName="0.6.0"
	android:installLocation="auto">

	<uses-sdk
		android:minSdkVersion="7"
		android:targetSdkVersion="14" />

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

	<application
		android:name="BusTimeApplication"
		android:icon="@drawable/ic_launcher_bustime"
		android:logo="@color/background_action_bar"
		android:label="@string/application_name"
		android:theme="@style/Theme.BusTime">

		<uses-library android:name="com.google.android.maps" />

		<activity
			android:name=".ui.activity.HomeActivity"
			android:theme="@style/Theme.BusTime.Home">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.activity.RoutesActivity"
			android:label="@string/title_routes">
		</activity>

		<activity
			android:name=".ui.activity.StationsActivity"
			android:label="@string/title_stations">
		</activity>

		<activity
			android:name=".ui.activity.StationsMapActivity"
			android:label="@string/title_stations">
		</activity>

		<activity
			android:name=".ui.activity.TimetableActivity"
			android:label="@string/title_timetable_full_week"
			android:configChanges="keyboardHidden|orientation|screenSize">
		</activity>
	</application>

</manifest>
