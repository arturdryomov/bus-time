<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="ru.ming13.bustime"
	android:versionCode="14"
	android:versionName="0.7.1"
	android:installLocation="auto">

	<uses-permission
		android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission
		android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission
		android:name="android.permission.INTERNET"/>
	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission
		android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>

	<uses-feature
		android:glEsVersion="0x00020000"
		android:required="true"/>

	<uses-sdk
		android:minSdkVersion="8"
		android:targetSdkVersion="18"/>

	<application
		android:icon="@drawable/ic_launcher"
		android:label="@string/application_name"
		android:theme="@style/Theme.BusTime">

		<meta-data
			android:name="com.google.android.maps.v2.API_KEY"
			android:value="@string/key_google_maps"/>

		<activity
			android:launchMode="singleTop"
			android:name=".activity.HomeActivity"
			android:theme="@style/Theme.BusTime.Home">

			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>

			<intent-filter>
				<action android:name="android.intent.action.SEARCH"/>
			</intent-filter>

			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/search"/>

		</activity>

		<activity
			android:label="@string/title_stations"
			android:launchMode="singleTop"
			android:name=".activity.RouteStationsActivity"
			android:parentActivityName=".activity.HomeActivity">
		</activity>

		<activity
			android:label="@string/title_stations"
			android:launchMode="singleTop"
			android:name=".activity.StationsMapActivity"
			android:theme="@style/Theme.BusTime.Map"
			android:parentActivityName=".activity.HomeActivity">
		</activity>

		<activity
			android:label="@string/title_routes"
			android:launchMode="singleTop"
			android:name=".activity.StationRoutesActivity"
			android:parentActivityName=".activity.HomeActivity">
		</activity>

		<activity
			android:label="@string/title_timetable"
			android:launchMode="singleTop"
			android:name=".activity.TimetableActivity">
		</activity>

		<provider
			android:authorities="ru.ming13.bustime"
			android:exported="false"
			android:name=".provider.BusTimeProvider">
		</provider>

	</application>

</manifest>
