<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="ru.ming13.bustime"
	android:versionCode="14"
	android:versionName="0.7.1"
	android:installLocation="auto">

	<uses-sdk
		android:minSdkVersion="8"
		android:targetSdkVersion="18"/>

	<application
		android:icon="@drawable/ic_launcher"
		android:label="@string/application_name"
		android:theme="@style/Theme.BusTime">

		<activity
			android:launchMode="singleTop"
			android:name=".activity.HomeActivity"
			android:theme="@style/Theme.BusTime.Home">

			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>

		</activity>

		<activity
			android:label="@string/title_stations"
			android:launchMode="singleTop"
			android:name=".activity.RouteStationsActivity"
			android:parentActivityName=".activity.HomeActivity">
		</activity>

		<activity
			android:label="@string/title_routes"
			android:launchMode="singleTop"
			android:name=".activity.StationRoutesActivity"
			android:parentActivityName=".activity.HomeActivity">
		</activity>

		<activity
			android:label="@string/title_timetable"
			android:launchMode="singleTop"
			android:name=".activity.TimetableActivity">
		</activity>

		<provider
			android:authorities="ru.ming13.bustime.provider"
			android:exported="false"
			android:name=".provider.BusTimeProvider">
		</provider>

	</application>

</manifest>
