<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/Widget.BusTime.ListSelector"
	android:orientation="horizontal"
	android:paddingLeft="@dimen/padding_list"
	android:paddingRight="@dimen/padding_list"
	android:layout_width="match_parent"
	android:layout_height="?android:listPreferredItemHeight">

	<FrameLayout
		android:layout_width="@dimen/width_avatar"
		android:layout_height="match_parent">

		<ImageView
			android:src="@drawable/ic_marker_stop_circle"
			android:scaleType="center"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

		<ImageView
			android:id="@+id/image_marker_first"
			android:src="@drawable/ic_marker_stop_line_half"
			android:scaleType="center"
			android:layout_gravity="bottom"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

		<ImageView
			android:id="@+id/image_marker_middle"
			android:src="@drawable/ic_marker_stop_line"
			android:scaleType="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

		<ImageView
			android:id="@+id/image_marker_last"
			android:src="@drawable/ic_marker_stop_line_half"
			android:scaleType="center"
			android:layout_gravity="top"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

	</FrameLayout>

	<LinearLayout
		android:orientation="vertical"
		android:gravity="center_vertical"
		android:layout_width="wrap_content"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/text_name"
			android:textColor="@color/text_primary"
			android:textSize="@dimen/text_primary"
			android:singleLine="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/text_direction"
			android:textColor="@color/text_secondary"
			android:textSize="@dimen/text_secondary"
			android:singleLine="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</LinearLayout>