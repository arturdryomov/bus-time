<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="?android:attr/listPreferredItemHeight">

	<ImageView
		android:id="@+id/indicator_station"
		android:src="@drawable/ic_indicator_station_circle"
		android:scaleType="center"
		android:layout_width="@dimen/width_indicator_station"
		android:layout_height="match_parent"/>

	<LinearLayout
		android:orientation="vertical"
		android:gravity="center_vertical"
		android:padding="@dimen/padding_list_item"
		android:layout_width="wrap_content"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/text_name"
			android:textSize="@dimen/text_station_name"
			android:singleLine="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/text_direction"
			android:textColor="@color/text_time_relative"
			android:textSize="@dimen/text_station_direction"
			android:singleLine="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</LinearLayout>