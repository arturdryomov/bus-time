<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<include
		layout="@layout/fragment_list"/>

	<LinearLayout
		android:id="@android:id/empty"
		android:orientation="vertical"
		android:paddingLeft="@dimen/padding_timetable_message"
		android:paddingRight="@dimen/padding_timetable_message"
		android:gravity="center"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:text="@string/message_timetable_title"
			android:textSize="@dimen/text_timetable_message_title"
			android:textStyle="bold"
			android:gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:text="@string/message_timetable_summary"
			android:textSize="@dimen/text_timetable_message_summary"
			android:paddingTop="@dimen/padding_timetable_message_summary"
			android:gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</FrameLayout>