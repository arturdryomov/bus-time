<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ListView
        android:id="@android:id/list"
        android:fastScrollEnabled="true"
        android:listSelector="@android:color/transparent"
        android:scrollbarStyle="outsideOverlay"
        android:paddingLeft="@dimen/padding_list"
        android:paddingRight="@dimen/padding_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/layout_message"
        android:visibility="gone"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_timetable_message"
        android:paddingRight="@dimen/padding_timetable_message"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:text="@string/message_timetable_title"
            android:textSize="@dimen/text_timetable_message_title"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <TextView
            android:text="@string/message_timetable_summary"
            android:textSize="@dimen/text_timetable_message_summary"
            android:paddingTop="@dimen/padding_timetable_message_summary"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </LinearLayout>

</FrameLayout>