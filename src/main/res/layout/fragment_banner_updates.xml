<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:background="@color/background_banner"
	android:clickable="true"
	android:layout_gravity="bottom"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:text="@string/message_updates"
		android:textColor="@color/text_banner"
		android:textSize="@dimen/text_banner"
		android:padding="@dimen/padding_banner_text"
		android:layout_gravity="center_vertical"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_gravity="center_vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<ImageButton
			android:id="@+id/button_accept"
			android:src="@drawable/ic_button_download"
			android:background="?attr/selectableItemBackground"
			android:padding="@dimen/padding_banner_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<View
			android:background="@android:color/white"
			android:layout_marginTop="@dimen/margin_banner_separator"
			android:layout_marginBottom="@dimen/margin_banner_separator"
			android:layout_width="@dimen/width_banner_separator"
			android:layout_height="match_parent"/>

		<ImageButton
			android:id="@+id/button_discard"
			android:src="@drawable/ic_button_cancel"
			android:background="?attr/selectableItemBackground"
			android:padding="@dimen/padding_banner_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

	</LinearLayout>

</LinearLayout>