<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.BusTime" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="android:actionBarStyle">@style/Theme.BusTime.ActionBar</item>
		<item name="android:windowBackground">@color/background_frame_window</item>
	</style>

	<style name="Theme.BusTime.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@drawable/bg_action_bar</item>
		<item name="android:displayOptions">showTitle|homeAsUp</item>
	</style>

	<style name="Theme.BusTime.Home" parent="Theme.BusTime">
		<item name="android:actionBarStyle">@style/Theme.BusTime.Home.ActionBar</item>
	</style>

	<style name="Theme.BusTime.Home.ActionBar" parent="Theme.BusTime.ActionBar">
		<!-- Theme with a “disableHome” displayOption would place tabs on top of the main action bar. -->
		<!-- Android’s issue #36191. -->

		<item name="android:logo">@android:color/transparent</item>
		<item name="android:displayOptions">showTitle|showHome|useLogo</item>
		<item name="android:navigationMode">tabMode</item>
		<item name="android:titleTextStyle">@style/Theme.BusTime.Home.ActionBar.Title</item>
	</style>

	<style name="Theme.BusTime.Home.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/text_application_name</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Theme.BusTime.Map" parent="Theme.BusTime">
		<item name="android:actionBarStyle">@style/Theme.BusTime.Map.ActionBar</item>
		<item name="android:windowActionBarOverlay">true</item>
	</style>

	<style name="Theme.BusTime.Map.ActionBar" parent="Theme.BusTime.ActionBar">
		<item name="android:background">@drawable/bg_action_bar_map</item>
	</style>

</resources>
