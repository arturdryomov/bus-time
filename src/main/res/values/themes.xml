<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.BusTime" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="actionBarStyle">@style/Theme.BusTime.ActionBar</item>
	</style>

	<style name="Theme.BusTime.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="background">@color/background_action_bar</item>
		<item name="displayOptions">showTitle</item>
	</style>

	<style name="Theme.BusTime.Home" parent="Theme.BusTime">
		<item name="actionBarStyle">@style/Theme.BusTime.Home.ActionBar</item>
	</style>

	<style name="Theme.BusTime.Home.ActionBar" parent="Theme.BusTime.ActionBar">
		<!-- Theme with a “disableHome” displayOption would place tabs on top of the main action bar. -->
		<!-- Android’s issue #36191. -->

		<item name="displayOptions">showHome|showTitle|useLogo</item>
		<item name="navigationMode">tabMode</item>
	</style>

	<style name="Theme.BusTime.Map" parent="Theme.BusTime">
		<item name="actionBarStyle">@style/Theme.BusTime.Map.ActionBar</item>
		<item name="windowActionBarOverlay">true</item>
	</style>

	<style name="Theme.BusTime.Map.ActionBar" parent="Theme.BusTime.ActionBar">
		<item name="background">@drawable/background_action_bar_transparent</item>
	</style>

</resources>
